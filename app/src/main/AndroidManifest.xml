<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yang.test">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 仿支付宝芝麻分 -->
        <activity
            android:name=".activity.ZhimafenActivity"
            android:hardwareAccelerated="false"
            android:label="芝麻分"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <!-- 音乐播放器 -->
        <activity
            android:name=".activity.MusicActivity"
            android:hardwareAccelerated="false"
            android:label="播放器"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.NotificationActivity"
            android:label="通知" />
        <activity
            android:name=".activity.GameActivity"
            android:label="2048小游戏" />
        <activity
            android:name=".activity.RussianSquareActivity"
            android:label="俄罗斯方块" />

        <!-- 音乐播放器 -->
        <service android:name=".service.MusicService" />
        <service
            android:name=".RedPaperAccessibilityService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <receiver
            android:name=".receiver.SmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.MusicReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="action.play" />
                <action android:name="action.stop" />
                <action android:name="action.continue" />
                <action android:name="action.seek" />
                <action android:name="action.previous" />
                <action android:name="action.next" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.CustomViewActivity"></activity>
    </application>

</manifest>